@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
@inject SignInManager<IdentityUser> SignInManager

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" /> <!-- dodawanie osblugi styli boostrap css 12-->
    <link href="~/content/StyleSheet.css" rel="stylesheet" />

    <title>@ViewBag.Title</title>

</head>

<body>
 


    <div class="jumbotron" style="margin-bottom: 0px; background-image:url(/images/tuo.png); text-align:center; opacity: 0.8">
        <h1>Encyklopedia Zwierzaków</h1>
        <p>Wszystko o wszystkim. </p>
    </div>

    <nav class="navbar navbar-expand-md navbar-dark" id="navbar">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapse_target">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapse_target">

            <ul class="navbar-nav">
                <li class="nav-item ">
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">Encyklopedia</a>

                </li>
                <li class="nav-item ">
                    <a asp-controller="Opinia" asp-action="Index" class="navbar-brand">Opinia</a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
                        method="post" class="navbar-right">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href=" javascript:document.getElementById('logoutForm').submit()">Wyloguj</a></li>
                        </ul>
                    </form>
                }
                else
                {
                    <li class="nav-item">
                        <a id="registerLink" asp-controller="Account" asp-action="Register" class="navbar-brand">Rejestracja</a>
                    </li>
                    <li class="nav-item">
                        <a id="loginLink" asp-controller="Account" asp-action="Login" class="navbar-brand">Logowanie</a>
                    </li>
                }
            </ul>

        </div>
    </nav>

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/patternSeg.jpg" class="mw-100 d-block w-50" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Mewa</h1>
                    <h3>
                        podrodzina ptaków z rodziny mewowatych (Laridae).<br />
                        Podrodzina obejmuje gatunki zamieszkujące cały świat.<br />
                        Mewy charakteryzują się<br />
                        zróżnicowaną masa ciała (od 100 g do 3 kg).
                    </h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/patternSeg.jpg" class="mw-100 d-block w-50" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Mewa to także</h1>
                    <h3>
                        Wyroby polskiego producenta bielizny i odzieży.<br /> Cechuje je niezwykła trwałość, aksamitność i delikatność, a to cechy wyrobów z jedwabiu i bawełny.
                    </h3>
                </div>
            </div>
        </div>
    </div>
    <script>
        window.onscroll = function () { myFunction() };

        var navbar = document.getElementById("navbar");

        var sticky = navbar.offsetTop;

        function myFunction() {
            if (window.pageYOffset >= sticky) {
                navbar.classList.add("sticky")
            } else {
                navbar.classList.remove("sticky");
            }
        }
    </script>

   

    <div class="container body-content">
        <div class="row">
            @RenderBody() <!-- generowanei zawartosci strony 14-->
        </div>
    </div>
   
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>


</body>
</html>

