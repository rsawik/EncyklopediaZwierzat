@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
@inject SignInManager<IdentityUser> SignInManager

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" /> <!-- dodawanie osblugi styli boostrap css 12-->
    <link href="~/content/StyleSheet.css" rel="stylesheet" />

    <title>@ViewBag.Title</title>

</head>
    


<body>


    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Encyklopedia zwierząt</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a asp-controller="Home" asp-action="Index" class="navbar-brand">Encyklopedia</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Opinia" asp-action="Index" class="navbar-brand">Opinia</a>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
                              method="post" class="navbar-right">
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href=" javascript:document.getElementById('logoutForm').submit()">Wyloguj</a></li>
                            </ul>
                        </form>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a id="registerLink" asp-controller="Account" asp-action="Register" class="navbar-brand">Rejestracja</a>
                        </li>
                        <li class="nav-item">
                            <a id="loginLink" asp-controller="Account" asp-action="Login" class="navbar-brand">Logowanie</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/rekinek.jpg" class="d-block w-50" alt="rekin">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Rekin morzny potwór</h5>
                    <p>Duży ryba, lepiej jej nie drażnić.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/slonik.jpg" class="d-block w-50" alt="suoń">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Słoń lądowy stwór</h5>
                    <p>Majestatyczny słoń, postrach wszystkich zwierząt lądowych.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/zuberek.jpg" class="d-block w-50" alt="zuberek">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Żubr żyje w puszczy</h5>
                    <p>Ten akurat to Buffalo wujek z Ameryki</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Poprzedni</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Następny</span>
        </a>
    </div>

    <div class="container body-content">
        <div class="row">
            @RenderBody() <!-- generowanei zawartosci strony 14-->
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>
