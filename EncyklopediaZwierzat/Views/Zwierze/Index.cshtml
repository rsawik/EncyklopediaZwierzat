@model IEnumerable<Zwierze>

<table class="table" style="background-color:azure">
       <thead>
           <tr>
               <th>Nazwa</th>
               <th>Rasa</th>
               <th>Środowisko</th>
               <th>Kraj Wystepowania</th>
               <th>Odzywianie</th>
               <th>Srednia długość życia</th>
               <th>Opis</th>
               <th>Miniaturka</th>
               <th>
                <a asp-action="Create" class="btn btn-danger btn-sm">Dodaj nowy</a>
               </th>
           </tr>
       </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nazwa)</td>
                <td>@Html.DisplayFor(modelItem => item.Rasa)</td>
                <td>@Html.DisplayFor(modelItem => item.Srodowisko)</td>
                <td>@Html.DisplayFor(modelItem => item.KrajWystepowania)</td>
                <td>@Html.DisplayFor(modelItem => item.Odzywianie)</td>
                <td>@Html.DisplayFor(modelItem => item.SredniaDlugoscZycia)</td>
                <td>@Html.DisplayFor(modelItem => item.Opis)</td>
                <td><img src="@item.MiniaturkaUrl" height="100" width="100"/></td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Szczegoły</a> 
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-success btn sm" style="margin-bottom:3px">Usun</a>
                </td>
            </tr>
            }
        </tbody>
</table>