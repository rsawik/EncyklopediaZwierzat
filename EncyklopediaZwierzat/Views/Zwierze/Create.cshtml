@model Zwierze

<h2>Dodaj zwierzę</h2>
<br />
<div class="row">
    <form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <label asp-for="Nazwa" class="form-control"/>
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rasa" class="control-label"></label>
                <label asp-for="Rasa" class="form-control"/>
                <span asp-validation-for="Rasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Srodowisko" class="control-label"></label>
                <label asp-for="Srodowisko" class="form-control"/>
                <span asp-validation-for="Srodowisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KrajWystepowania" class="control-label"></label>
                <label asp-for="KrajWystepowania" class="form-control"/>
                <span asp-validation-for="KrajWystepowania" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Odzywianie" class="control-label"></label>
                <label asp-for="Odzywianie" class="form-control"/>
                <span asp-validation-for="Odzywianie" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="SredniaDlugoscZycia" class="control-label">Dlugosc zycia</label>
                <label asp-for="SredniaDlugoscZycia" class="form-control"/>
                <span asp-validation-for="SredniaDlugoscZycia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <label asp-for="Opis" class="form-control"/>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ZdjecieUrl" value="@ViewBag.ImgPath" />
            <input type="hidden" asp-for="MiniaturkaUrl" value="@ViewBag.ImgPath"/>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="CZyJestGatunkiemChronionym"/> Jest gatunkiem chronionym
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="CzyZnajdeGoWPolsce"/> Występuje w Polsce
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj zwierze" class="btn btn-success" style="margin-top:30px" />
                <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
            </div>
        </div>
    </form>
</div>